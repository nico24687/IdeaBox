<html>
    <head>
        <title>Ideabox</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    </head>
    <body>
        <h1 align = "center">IdeaBox</h1>
        <form action = '/' method = "POST">
            <p>
                Your idea:
            </p>
            <input type = "text" class = "form-control" placeholder ="Put the title of your idea here" name = "idea_title"><br/>
            <p>
                Your content:
            </p>
            <textarea name = "idea_description" class = "form-control" placeholder ="Type the content of your idea here"></textarea><br/>
            <div align = "center">
                <input type = "submit" class = "btn btn-success">
            </div>
        </form>
        
        <h3>Existing Ideas</h3>
        
        <ul >
            <% ideas.each_with_index do |idea,id| %>
            <li class = "list-group-item" >
                <%= idea.title %> (<%= id %>)<br/>
                <%= idea.description %>
                <a href = "/<%= id %>/edit"><i class="fa fa-pencil-square-o" aria-hidden="true"></i>Edit</a>
                <form action ="/<%= id %>" method = "POST">
                        <input type = "hidden" name = "_method" value = "DELETE">
                        <input style = "margin-top:-25px; float:right;" class = "btn btn-danger" type = "submit" value = "delete">
                </form>
            </li>
            
            <% end %>
        </ul>
        
    </body>
</html>